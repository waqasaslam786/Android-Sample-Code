<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_6sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_user_image_view"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/ic_baseline_person_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/item_user_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/appBlue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/item_user_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/item_user_image_view"
        app:layout_constraintRight_toRightOf="@+id/item_user_image_view"
        app:layout_constraintTop_toTopOf="@+id/item_user_image_view" />

    <TextView
        android:id="@+id/item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="monospace"
        android:textSize="@dimen/_13sdp"
        android:text="@string/testusername"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/item_user_image_view"
        app:layout_constraintLeft_toRightOf="@+id/item_user_image_view"
        app:layout_constraintTop_toTopOf="@+id/item_user_image_view" />
</androidx.constraintlayout.widget.ConstraintLayout>